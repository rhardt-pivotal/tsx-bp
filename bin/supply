#!/bin/sh
echo "\n\n***\nHELLO FROM SUPPLY!!!!\n***\n\n $1   :   $2   :   $3   :   $4"
mkdir $3/$4/bin
SCRIPT=$(cat <<EOF
#!/bin/sh
echo "********* RUNNING SCRIPT!!!! ************\n"
echo "$1\n" >> /tmp/SCRIPT.RAN
EOF
)
echo "$SCRIPT" > $3/$4/bin/script.sh
chmod +x $3/$4/bin/script.sh
CONTENT=$(cat <<EOF
--- 
name: tsx_buildpack
config:
  java_opts:
    options: 
      script_1: "poo"
    preformatted_options: "script2=poo2"
EOF
)

echo "$CONTENT"
echo "$CONTENT" > $3/$4/config.yml

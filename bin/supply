#!/bin/sh
echo "\n\n***\nHELLO FROM SUPPLY!!!!\n***\n\n $1   :   $2   :   $3   :   $4"
mkdir $3/$4/bin
SCRIPT=$(cat <<EOF
#!/bin/sh
echo "nothing_to_see_here"
echo "\$1\n" >> /tmp/SCRIPT.RAN
EOF
)
echo "$SCRIPT" > $3/$4/bin/script.sh
chmod +x $3/$4/bin/script.sh
CONTENT=$(cat <<EOF
--- 
name: tsx_buildpack
config:
  java_opts:
    options: 
      "-Dscript_1": "\$(\$HOME/../deps/$4/bin/script.sh script1)"
    preformatted_options: 
    - "-Dscript2=\$(\$HOME/../deps/$4/bin/script.sh script2)"
EOF
)

echo "$CONTENT"
echo "$CONTENT" > $3/$4/config.yml
